@model IEnumerable<vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if(!Model.Any())
{
    <p>We don't have any customer yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> Customers </th>
                <th> Discount Rate </th>
            </tr>
        </thead>

    @foreach (var item in Model) {
        <tr>
            <td>
                  @Html.ActionLink(item.Name, "Details", "Customers", new { id = item.Id },null)
            </td>
            <td>
                @item.MebershipType.DiscountRate%
            </td>
        </tr>
    }

    </table>
}
